{
  "name": "@neoaren/comet",
  "version": "0.1.0",
  "description": "A convenient declarative routing libarary for Cloudflare Workers.",
  "scripts": {
    "dev": "miniflare example/dist/index.mjs --live-reload --debug",
    "build": "rimraf dist && npm-run-all build:esm build:cjs gen-declarations",
    "build:esm": "esbuild src/index.ts --bundle --outfile=dist/index.mjs --format=esm --target=es2020",
    "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=cjs --target=es2020",
    "build:example": "esbuild example/index.ts --bundle --outfile=example/dist/index.mjs --format=esm --target=esnext",
    "gen-declarations": "tsc -p tsconfig.json --out dist/index.ts --noEmit false --declaration --emitDeclarationOnly",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --ext ts --fix"
  },
  "main": "dist/index.js",
  "files": ["dist"],
  "repository": "github:neoaren/comet",
  "keywords": [
    "cloudflare-workers",
    "cloudflare",
    "workers",
    "routing",
    "declarative",
    "comet"
  ],
  "author": "NeoAren",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NeoAren/comet/issues"
  },
  "homepage": "https://github.com/NeoAren/comet#readme",
  "devDependencies": {
    "@cloudflare/workers-types": "^3.7.1",
    "@danifoldi/eslint-plugin-eslint-presets": "^1.0.12",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "esbuild": "^0.14.38",
    "eslint": "^8.14.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  }
}
