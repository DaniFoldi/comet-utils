{
  "name": "@neoaren/comet",
  "version": "0.3.7",
  "description": "A convenient declarative routing library for Cloudflare Workers.",
  "scripts": {
    "dev": "miniflare example/dist/v2/index.mjs --live-reload --debug",
    "build": "rimraf dist && npm-run-all build:esm build:cjs build:tsc",
    "build:esm": "esbuild src/v2/index.ts --bundle --outfile=dist/comet.mjs --format=esm --target=es2020",
    "build:cjs": "esbuild src/v2/index.ts --bundle --outfile=dist/comet.cjs --format=cjs --target=es2020",
    "build:example": "esbuild example/src/v2/index.ts --bundle --outfile=example/dist/v2/index.mjs --format=esm --target=esnext",
    "build:tsc": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --ext ts --fix"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/comet.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/comet.mjs",
      "require": "./dist/comet.cjs"
    }
  },
  "repository": "github:neoaren/comet",
  "keywords": [
    "cloudflare-workers",
    "cloudflare",
    "workers",
    "routing",
    "declarative",
    "comet"
  ],
  "author": "NeoAren",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NeoAren/comet/issues"
  },
  "homepage": "https://github.com/NeoAren/comet#readme",
  "dependencies": {
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230419.0",
    "@lint-my-life/eslint-config-comet": "^0.2.2",
    "esbuild": "^0.17.18",
    "miniflare": "^2.14.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.4.1",
    "typescript": "^5.0.4"
  }
}
