{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [ "esnext" ],
    "types": [ "@cloudflare/workers-types/experimental", "@types/node" ],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true
  },
  "include": [ "src/**/*" ],
  "exclude": [ "example/**/*" ]
}
